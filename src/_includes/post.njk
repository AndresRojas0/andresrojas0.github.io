---
layout: base.njk
---

<div class="article-with-sidebar">
  {# ============================================
     MOBILE: Botones y Popup Modal
     ============================================ #}
  
  {# Botón flotante que aparece al hacer scroll #}
  <div id="toc-bar" class="invisible">
    <span class="label">{{ title }}</span>
    <button type="button" class="toc-trigger">
      ☰
    </button>
  </div>

  {# Botón estático en la página #}
  <button id="toc-solo-trigger" type="button" class="toc-trigger">
    <span class="label">Índice</span>
    <span>→</span>
  </button>

  {# Popup modal (dialog) #}
  <dialog id="toc-popup">
    <div class="header">
      <div class="label">{{ title }}</div>
      <button id="toc-popup-close" type="button">
        ✕
      </button>
    </div>
    <div id="toc-popup-content">
      {# El contenido se genera automáticamente por JavaScript #}
    </div>
  </dialog>

  {# ============================================
     DESKTOP: Panel Lateral Sticky
     ============================================ #}
  
  <aside id="toc-wrapper">
    <h2>Índice</h2>
    <nav>
      {# El contenido se genera automáticamente por JavaScript #}
    </nav>
  </aside>

  {# ============================================
     CONTENIDO PRINCIPAL DEL ARTÍCULO
     ============================================ #}
  
  <article>
    {% if image %}
      <img src="{{ image }}" alt="{{ title }}">
    {% endif %}

    <h1>{{ title }}</h1>
    
    {% if date %}
      <time class="post-date" datetime="{{ date }}">{{ date }}</time>
    {% endif %}

    {{ content | safe }}
  </article>
</div>
